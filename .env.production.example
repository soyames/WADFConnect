# Production Environment Variables for Firebase Deployment
# Copy this file to .env.production and fill in your actual values

# ====================================
# DATABASE CONFIGURATION (PostgreSQL)
# ====================================
# Database name: wadf (as specified)
DATABASE_URL=postgresql://username:password@your-host:5432/wadf?sslmode=require
PGHOST=your-postgresql-host.com
PGPORT=5432
PGUSER=your_database_user
PGPASSWORD=your_secure_password
PGDATABASE=wadf

# ====================================
# FIREBASE AUTHENTICATION
# ====================================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_PROJECT_ID=wadf-platform
VITE_FIREBASE_APP_ID=your_firebase_app_id

# ====================================
# SESSION & SECURITY
# ====================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=generate-a-secure-random-string-minimum-64-characters-for-production

# ====================================
# SERVER CONFIGURATION
# ====================================
NODE_ENV=production
PORT=8080
